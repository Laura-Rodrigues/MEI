
<?xml version="1.0" ?>
<project name="Toon">

    <assets>
       <scenes>
            <scene name="teapot" filename="Teapot.3ds" param="SWAP_YZ UNITIZE" />
       </scenes> 
        <cameras>
            <camera name="main">
                <POSITION x="0" y="0" z="5" />
            </camera>
        </cameras>

       <lights>
            <light name="sun">
                <DIRECTION x="5" y="-5" z="5" />
            </light>
       </lights> 

       <materialLibs>
            <materialLib filename="toon.mlib"/>
       </materialLibs>

    </assets>
    <pipelines>
        <pipeline name="toon">
            <pass name="toon" class="default">
                <scenes>
                    <scene name="teapot" />
                </scenes>
                <camera name="main" />

                <lights>
                    <light name="sun" />
                </lights>
                <injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="toon" fromLibrary="toon" />
					</map>
				</injectionMaps>
            </pass>
        </pipeline>
    </pipelines> 
</project>