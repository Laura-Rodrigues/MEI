<?xml version="1.0" ?>
<project name="Simple" >
	<assets>
		<scenes>
			<scene name="rb" param="UNITIZE">
				<file name="rainbowBench.obj"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>		

		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value = "60"/>
				<NEAR value= "1"/>
				<FAR value= "100"/>
                <POSITION x="1.460277" y="-1.0375654" z="1.76627" w="1" />
                <LOOK_AT_POINT x = 0 y=0 z=0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="-2" y="-1" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
			</light>
		</lights>

        <!-- adding a material lib -->
		<materialLibs>
			<materialLib filename="simple.mlib"/>
		</materialLibs>


	</assets>
	
	<pipelines>
		<pipeline name="simple" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="rb" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromLibrary="simple" fromMaterial="v4" />
                    </map>
                </injectionMaps>
			</pass>
		</pipeline>
	</pipelines>
</project>